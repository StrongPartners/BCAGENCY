{
  "rewrites": [
    {
      "source": "/((?!sitemap.xml|robots.txt|favicon.jpg|logo.png|logo-white.png|logo-icon.png|.*\\.(?:png|jpg|jpeg|gif|svg|mp4|ico|css|js|woff|woff2|ttf|eot)).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain" },
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ]
}
